<apex:page standardController="Order__c" extensions="PobControllerExt">
	
	<apex:pageMessages />
	<apex:sectionHeader title="PO Builder" subtitle="{!heading}"/>
	
	
	<apex:form >
	
		<!-- Block 1: FILTER
		============================= -->
		<apex:pageBlock title="Purchase Order Builder" mode="edit">
			<apex:pageBlockButtons >
				<apex:commandButton value="Save" action="{!save}"/>
				<apex:commandButton value="Cancel" action="{!cancel}"/>
			</apex:pageBlockButtons>
			
			<apex:pageBlockSection >
				<apex:outputPanel >
					<apex:actionRegion >
						<apex:pageBlockSectionItem >	    
							<apex:outputLabel value="Product Category Filter" for="filter"/>
					  		<apex:selectList size="1" id="filter" value="{!categoryFilter}">
								<apex:selectOptions value="{!filterValues}"></apex:selectOptions>
				      		</apex:selectList>
				      	</apex:pageBlockSectionItem>
			     	</apex:actionRegion>
			     	
			   </apex:outputPanel>
		   </apex:pageBlockSection>
   		</apex:pageBlock>
   
	
		<!-- Block 2: TABLE
		=============================--> 
		<apex:pageBlock title="Product Lots">
			<apex:pageBlockSection >
				<apex:dataList var="a" value="{!lots}" type="1">
					{!a.name}
				</apex:dataList>
			</apex:pageBlockSection>
			<apex:panelGrid columns="5">
				<apex:commandButton action="{!first}" value="{!$Label.POB_First}"/>
				<apex:commandButton action="{!previous}" value="{!$Label.POB_Prev}"/>
				<apex:outputText value="{!$Label.POB_Page}">
					<apex:param value="0"/>
	      				<apex:param value="10"/>
				</apex:outputText>
				<apex:commandButton action="{!next}" value="{!$Label.POB_Next}" />
				<apex:commandButton action="{!last}" value="{!$Label.POB_Last}" />
			</apex:panelGrid>
		
		</apex:pageBlock>
	
	</apex:form>
	
</apex:page>